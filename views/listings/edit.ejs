<% layout("/layouts/boilerplate") %>
<body>
    <div class="row">
        <div class=".col-8 offset-2">
            <h3>Edit the Listing</h3>
            <form action="/listings/<%=listing._id%>?_method=put" method="post" >
            
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="listing[title]" class="form-control" value=<%=listing.title%> >
                </div>
        
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea type="text" name="listing[description]"  class="form-control"> value=<%=listing.description%></textarea> 
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Image</label>
                    <input type="text" name="listing[image]"  class="form-control" value=<%=listing.image%>>
                </div>
                
                
                <div class="mb-3">
                    <label for="price" class="form-label">Price</label>
                    <input type="text" name="listing[price]"  class="form-control" value=<%=listing.price%>>
                </div>

                <div class="mb-3">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" name="listing[country]"  class="form-control" value=<%=listing.country%>>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Loaction</label>
                    <input type="text" name="listing[location]"  class="form-control" value=<%=listing.location%>>
                </div>
                <button>Submit</button>
            </form>
        </div>
    </div>
</body>
